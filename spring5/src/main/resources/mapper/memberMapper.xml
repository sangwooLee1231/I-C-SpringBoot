<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.spring5.member.dao.MemberMapper">
<!--    MemberMapper.java와 연결이 됨.-->

    <insert id="insertMember"
            parameterType="com.example.spring5.member.vo.MemberVO">
<!--        resultType = "int"-->
<!--        insert,delete,update는 resultType이 "int"라서 써주지 않음
               컴파일시 자동 생성-->
        insert into member
        values (#{id},#{pw},#{name},#{tel})
    </insert>

    <update id="updateMember"
            parameterType="com.example.spring5.member.vo.MemberVO">
            update member
            set name = #{name}, pw = #{pw}, tel = #{tel}
            where id = #{id}
    </update>

    <delete id="deleteMember" parameterType="string">
            delete from member
            where id = #{id}
    </delete>

    <select id="selectMemberById"
            parameterType="string"
            resultType="com.example.spring5.member.vo.MemberVO">
    select * from member
    where id = #{id}
    </select>

    <select id="selectMemberAll"
            resultType="com.example.spring5.member.vo.MemberVO">
            select * from member
    </select>

    <select id="selectMemberNameById"
            parameterType="string"
            resultType="string">
        select #{name} from member
        where id = #{id}
    </select>

    <select id="selectMemberByName"
            parameterType="string"
            resultType="com.example.spring5.member.vo.MemberVO">
        select * from member
        where name = #{name}
    </select>

    <select id="selectMembersByNameTel"
            parameterType="com.example.spring5.member.vo.MemberVO"
            resultType="com.example.spring5.member.vo.MemberVO">
        select * from member
        where name = #{name} and tel = #{tel}
    </select>

</mapper>